  </environment>
  </environments>
  <mappers>
  <mapper resource="cn/zzu/mapper/TeacherMapper.xml"/>
  <mapper resource="cn/zzu/mapper/BookMapper.xml"/>
  <mapper resource="cn/zzu/mapper/RecordMapper.xml"/>
